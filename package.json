{
  "name": "create-linting",
  "version": "1.5.1",
  "repository": "https://github.com/romanrostislavovich/create-lint",
  "bugs": "https://github.com/romanrostislavovich/create-lint/issues",
  "description": "Create linting configs (ESLint/Prettier/Stylelint/Husky) via CLI presets or interactive prompts.",
  "bin": {
    "create-linting": "./dist/index.js"
  },
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run copy-files",
    "prepack": "npm run build",
    "start": "node ./dist/index.js",
    "dev": "ts-node-esm src/index.ts",
    "lint": "lint:eslint && lint:markdown",
    "prepare": "husky",
    "lint:markdown": "markdownlint-cli2 -c ./.markdownlint.json",
    "lint:html": "htmlhint **/*.html",
    "copy-files": "copyfiles -a -u 1 src/templates/**/* dist/",
    "lint:eslint": "eslint --fix",
    "format:prettier": "prettier --write",
    "lint:style": "stylelint **/*.{scss,sass,css} -c ./stylelint.config.js --fix"
  },
  "keywords": [
    "eslint",
    "prettier",
    "stylelint",
    "husky",
    "lint",
    "cli",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "inquirer": "^9.3.2",
    "ora": "^6.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/ejs": "^3.1.5",
    "@types/inquirer": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "htmlhint": "^1.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.39.0",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.3"
  }
}
